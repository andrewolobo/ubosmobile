                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="UGX" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="URL" />

            <TextView
                android:id="@+id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
